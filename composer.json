{
    "name": "mglaman/phanalysis",
    "description": "Static analysis tool",
    "license": "MIT",
    "require": {
        "nikic/php-parser": "^4.1"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^7.4",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Phanalysis\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phanalysis\\Tests\\": "tests/src"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit -c phpunit.xml",
        "cs": "./vendor/bin/phpcs --standard=psr2 src/"
    }
}
